@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="container-indent">
	<div class="container container-fluid-custom-mobile-padding">
		<div class="row">
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-9 center-column" id="content">
						<p>If you already have an account with us, please login at the <a href="index-26.html?route=account/login">login page</a>.</p>
						<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="form-horizontal form-default">
							<div class="validation" asp-validation-summary="ModelOnly"></div>
							<fieldset id="account">
								<legend>Персональные данные</legend>
								<div class="form-group row required">
									<label class="col-sm-2 align-self-center control-label" asp-for="FirstName">Имя</label>
									<div class="col-sm-10">
										<input asp-for="FirstName" type="text" name="FirstName" value="" placeholder="Имя" id="input-firstname" class="form-control">
										<span asp-validation-for="FirstName" class="text-danger"></span>
									</div>
								</div>
								<div class="form-group row">
									<label asp-for="MiddleName" class="col-sm-2 align-self-center control-label" for="input-middlename">Отчество</label>
									<div class="col-sm-10">
										<input asp-for="MiddleName" type="text" name="MiddleName" value="" placeholder="Отчество" id="input-middlename" class="form-control">
										<span asp-validation-for="MiddleName" class="text-danger"></span>
									</div>
								</div>
								<div class="form-group row">
									<label asp-for="LastName" class="col-sm-2 align-self-center control-label" for="input-lastname">Фамилия</label>
									<div class="col-sm-10">
										<input asp-for="LastName" type="text" name="LastName" value="" placeholder="Фамилия" id="input-lastname" class="form-control">
										<span asp-validation-for="LastName" class="text-danger"></span>
									</div>
								</div>
								<div class="form-group row required">
									<label asp-for="Email" class="col-sm-2 align-self-center control-label" for="input-email">E-Mail</label>
									<div class="col-sm-10">
										<input asp-for="Email" type="email" name="Email" value="" placeholder="E-Mail" id="input-email" class="form-control">
										<span asp-validation-for="Email" class="text-danger"></span>
									</div>
								</div>
								<div class="form-group row required">
									<label asp-for="MobilePhone" class="col-sm-2 align-self-center control-label" for="input-telephone">Телефон</label>
									<div class="col-sm-10">
										<input asp-for="MobilePhone" type="tel" name="MobilePhone" value="" placeholder="Телефон" id="input-telephone" class="form-control">
										<span asp-validation-for="MobilePhone" class="text-danger"></span>
									</div>
								</div>
							</fieldset>
							<fieldset>
								<legend>Your Password</legend>
								<div class="form-group row required">
									<label asp-for="Password" class="col-sm-2 align-self-center control-label" for="input-password">Пароль</label>
									<div class="col-sm-10">
										<input asp-for="Password" type="password" name="Password" value="" placeholder="Пароль" id="input-password" class="form-control">
										<span asp-validation-for="Password" class="text-danger"></span>
									</div>
								</div>
								<div class="form-group row required">
									<label asp-for="ConfirmPassword" class="col-sm-2 align-self-center control-label" for="input-confirm">Подтверждение пароля</label>
									<div class="col-sm-10">
										<input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" value="" placeholder="Подтверждение пароля" id="input-confirm" class="form-control">
										<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
									</div>
								</div>
							</fieldset>
							<div class="buttons">
								<div class="pull-right">
									<input type="submit" value="Зарегистрироваться" class="btn btn-primary">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
			</div>
		</div>
	</div>
</div>

